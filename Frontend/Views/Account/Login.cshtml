@model LoginDto
@{
    ViewData["Title"] = "Login";
}

<section class="contact-section spad" style="min-height:80vh;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <h3 class="text-center mb-4">Login to your account</h3>
                <form asp-action="Login" method="post" class="contact-form" asp-antiforgery="true">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger mb-3" })
                    <div class="row">
                        <div class="col-lg-12 mb-3">
                            <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        <div class="col-lg-12 mb-3">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        <div class="col-lg-12 text-center">
                            <button type="submit" class="btn bk-btn w-50">Login</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

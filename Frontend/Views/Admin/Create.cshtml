@model AddPropertyDto

@{
    ViewData["Title"] = "Add New Property";
}

<div class="container my-5">
    <h2 class="mb-4">Add New Property</h2>

    <form asp-action="Create" method="post" asp-antiforgery="true">
        @Html.ValidationSummary(false, "", new { @class = "text-danger mb-3" })
        <div class="row">
         
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Title" class="form-label">Title</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ImageUrl" class="form-label">Image URL</label>
                    <input asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Address" class="form-label">Address</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="City" class="form-label">City</label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Country" class="form-label">Country</label>
                    <input asp-for="Country" class="form-control" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

         
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="PricePerNight" class="form-label">Price Per Night</label>
                    <input asp-for="PricePerNight" class="form-control" type="number" min="1" />
                    <span asp-validation-for="PricePerNight" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MaxGuests" class="form-label">Max Guests</label>
                    <input asp-for="MaxGuests" class="form-control" type="number" min="1" max="100" />
                    <span asp-validation-for="MaxGuests" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Bedrooms" class="form-label">Bedrooms</label>
                    <input asp-for="Bedrooms" class="form-control" type="number" min="0" max="50" />
                    <span asp-validation-for="Bedrooms" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Bathrooms" class="form-label">Bathrooms</label>
                    <input asp-for="Bathrooms" class="form-control" type="number" min="0" max="50" />
                    <span asp-validation-for="Bathrooms" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Sqm" class="form-label">Size (m²)</label>
                    <input asp-for="Sqm" class="form-control" type="number" min="1" />
                    <span asp-validation-for="Sqm" class="text-danger"></span>
                </div>

                <div class="form-check mb-2">
                    <input asp-for="HasWifi" class="form-check-input" />
                    <label asp-for="HasWifi" class="form-check-label">Wi-Fi</label>
                </div>
                <div class="form-check mb-2">
                    <input asp-for="HasAirConditioning" class="form-check-input" />
                    <label asp-for="HasAirConditioning" class="form-check-label">Air Conditioning</label>
                </div>
                <div class="form-check mb-2">
                    <input asp-for="HasKitchen" class="form-check-input" />
                    <label asp-for="HasKitchen" class="form-check-label">Kitchen</label>
                </div>
                <div class="form-check mb-2">
                    <input asp-for="HasWashingMachine" class="form-check-input" />
                    <label asp-for="HasWashingMachine" class="form-check-label">Washing Machine</label>
                </div>
                <div class="form-check mb-4">
                    <input asp-for="HasParking" class="form-check-input" />
                    <label asp-for="HasParking" class="form-check-label">Parking</label>
                </div>
            </div>
        </div>

        <div class="text-end">
            <button type="submit" class="btn bk-btn w-40 mb-2">
                <i class="fa fa-save"></i> Save Property
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

